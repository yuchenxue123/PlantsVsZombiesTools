<Window x:Class="MeowTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeowTools"
        mc:Ignorable="d"
        Title="植物大战僵尸修改器" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        MinHeight="425" MinWidth="600"
        Icon="Resources/icon.ico">
    <Grid>
        <!-- 主布局容器 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 主内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" CanContentScroll="False">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 游戏状态面板 -->
                <GroupBox Grid.Row="0" Header="游戏状态" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="游戏版本:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock x:Name="ProcessStatusText" Text="未检测到游戏进程" 
                                       Foreground="Red" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" x:Name="RefreshProcessButton" Content="重新检测" 
                                Width="100" Height="30" Click="RefreshProcessButtonClick"/>
                    </Grid>
                </GroupBox>
                
                <!-- 资源修改面板 -->
                <GroupBox Grid.Row="1" Header="资源修改" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <UniformGrid Grid.Row="0" Columns="2">
                            <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                                <TextBlock Text="阳光:" VerticalAlignment="Center" Width="35"/>
                                <TextBox x:Name="SunshineCountInput" Text="9990" Width="80" VerticalContentAlignment="Center" Margin="5,0"/>
                                <Button x:Name="SetSunshineButton" Content="修改" Width="50" Height="25" Click="SetSunshineButtonClick"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                                <TextBlock Text="金币:" VerticalAlignment="Center" Width="35"/>
                                <TextBox x:Name="CoinCountInput" Text="1000000" Width="80" VerticalContentAlignment="Center" Margin="5,0"/>
                                <Button x:Name="SetCoinBtn" Content="修改" Width="50" Height="25" Click="SetCoinButtonClick"/>
                            </StackPanel>
                        </UniformGrid>
                        
                        <WrapPanel Grid.Row="1" Margin="0, 10, 0, 0">
                            <Button x:Name="PlantNoConsumeButton" Content="种植不消耗阳光" Width="120" Height="30" HorizontalAlignment="Left" Margin="5" Click="PlantNoConsumeButtonClick"/>
                        </WrapPanel>
                    </Grid>
                </GroupBox>
                
                <!-- 其他功能面板 -->
                <GroupBox Grid.Row="2" Header="其他功能" Margin="0,0,0,15" Padding="10">
                    <WrapPanel>
                        <Button x:Name="NoCooldownButton" Content="植物无冷却" Width="120" Height="30" Margin="5" Click="NoCooldownButtonClick"/>
                    </WrapPanel>
                </GroupBox>
            </Grid>
        </ScrollViewer>
        
        <!-- 状态栏 -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBar.Items>
                <StatusBarItem>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="游戏状态:" Margin="0, 0, 10, 0"></TextBlock>
                        <TextBlock x:Name="StatusText" Text="就绪"/>
                    </StackPanel>
                    
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <TextBlock x:Name="VersionText" Text="适用版本:"/>
                </StatusBarItem>
            </StatusBar.Items>
        </StatusBar>
    </Grid>
</Window>
